{
  "name": "@pacetrack/server",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "PORT=4000 bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:push": "bunx --bun drizzle-kit push",
    "db:drop": "bunx --bun drizzle-kit drop",
    "db:studio": "npx drizzle-kit studio"
  },
  "dependencies": {
    "@abyrd9/zod-form-data": "^1.1.2",
    "@hono/swagger-ui": "^0.5.2",
    "@libsql/client": "^0.15.10",
    "@mjackson/file-storage": "^0.7.0",
    "@mjackson/form-data-parser": "^0.9.1",
    "@mjackson/lazy-file": "^3.4.0",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@pacetrack/schema": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "@tanstack/react-query-devtools": "^5.84.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.0",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "resend": "^6.0.1",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@tanstack/react-router-devtools": "^1.130.17",
    "@types/bun": "^1.2.19",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.4"
  }
}
