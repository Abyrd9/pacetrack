{
  "name": "@pacetrack/server",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "PORT=4000 bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun --external @react-email/* --external sharp",
    "start": "bun run dist/index.js",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:push": "bunx --bun drizzle-kit push",
    "db:drop": "bunx --bun drizzle-kit drop",
    "db:studio": "npx drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts",
    "db:clean": "bun run scripts/clean.ts"
  },
  "dependencies": {
    "@abyrd9/zod-form-data": "^1.2.6",
    "@hono/swagger-ui": "^0.5.2",
    "@mjackson/file-storage": "^0.7.0",
    "@mjackson/form-data-parser": "^0.9.1",
    "@mjackson/lazy-file": "^3.4.0",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@pacetrack/schema": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "drizzle-orm": "^0.44.6",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.9",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "resend": "^6.1.2",
    "sharp": "^0.34.4",
    "stripe": "^19.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@tanstack/react-router-devtools": "^1.132.31",
    "@types/bun": "^1.2.23",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.5"
  }
}
