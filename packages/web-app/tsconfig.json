{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,

		// Path aliases
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/utils/*": ["./src/utils/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/constants/*": ["./src/constants/*"],
			"@pacetrack/schema": ["../schema/src/index.ts"],
			"@pacetrack/server": ["../server/src/index.ts"]
		},
		"noEmit": true
	}
}
