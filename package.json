{
	"name": "pacetrack",
	"scripts": {
		"typecheck": "bun run scripts/typecheck-all.ts",
		"check-updates": "bun run scripts/check-updates.ts",
		"clean": "rm -rf node_modules && rm -rf packages/*/node_modules && bun install"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"typescript": "^5.9.2"
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"harbor": {
		"domain": "localhost",
		"useSudo": false,
		"services": [
			{
				"name": "web-app",
				"path": "./packages/web-app",
				"command": "bun run dev"
			},
			{
				"name": "server",
				"path": "./packages/server",
				"command": "bun run dev"
			},
			{
				"name": "studio",
				"path": "./packages/server",
				"command": "bun run db:studio"
			},
			{
				"name": "docker",
				"path": "./",
				"command": "docker compose up"
			}
		]
	},
	"dependencies": {
		"prompts": "^2.4.2"
	}
}
