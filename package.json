{
	"name": "pacetrack",
	"scripts": {
		"typecheck": "bun x tsc --noEmit --project .",
		"typecheck:watch": "bun x tsc --noEmit --project . --watch",
		"check-updates": "bun run scripts/check-updates.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"typescript": "^5.8.3"
	},
	"private": true,
	"workspaces": ["packages/*"],
	"harbor": {
		"domain": "localhost",
		"useSudo": false,
		"services": [
			{
				"name": "web-app",
				"path": "./packages/web-app",
				"command": "bun run dev"
			},
			{
				"name": "server",
				"path": "./packages/server",
				"command": "bun run dev"
			},
			{
				"name": "studio",
				"path": "./packages/server",
				"command": "bun run db:studio"
			},
			{
				"name": "docker",
				"path": "./",
				"command": "docker compose up"
			}
		]
	},
	"dependencies": {
		"prompts": "^2.4.2"
	}
}
